<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- 타이틀바 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="@string/title_create_goal"
        android:background="#f34880"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="vertical"
        >
        <!-- 운동종류선택 -->
        <Spinner
            android:id="@+id/what_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:textSize="12sp"
            android:textColor="#c5cbd3"
            android:text="@string/category"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#64758a"
            />

        <!-- 운동량선택 -->
        <EditText
            android:id="@+id/how_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@android:color/transparent"
            android:hint="@string/how_long"
            android:imeOptions="actionNext"
            android:textSize="16sp"
            android:textColor="#cccccc"
            android:textColorHint="#cccccc"
            />
        <TextView
            android:id="@+id/how_long_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="#c5cbd3"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#64758a"
            />

        <!-- 요일선택 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#cccccc"
            android:text="@string/title_weekdays"
            />
        <LinearLayout
            android:id="@+id/what_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/checkbox_weekdays"
                android:text="@string/checkbox_sun"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/checkbox_weekdays"
                android:text="@string/checkbox_mon"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/checkbox_weekdays"
                android:text="@string/checkbox_tue"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/checkbox_weekdays"
                android:text="@string/checkbox_wed"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/checkbox_weekdays"
                android:text="@string/checkbox_thu"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/checkbox_weekdays"
                android:text="@string/checkbox_fri"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/checkbox_weekdays"
                android:text="@string/checkbox_sat"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <!-- 완료버튼 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/common_save"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:background="#f34880"
                    />
                <View
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_goal_item"
                    />
            </FrameLayout>

            <!-- 삭제버튼 -->
            <FrameLayout
                android:id="@+id/btn_delete_wrapper"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/common_delete"
                    android:textColor="#ffffff"
                    android:background="#999999"
                    />
                <View
                    android:id="@+id/btn_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_goal_item"
                    />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>